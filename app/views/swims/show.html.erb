<%- model_class = Swim -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @swim.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:distance) %>:</strong></dt>
  <dd><%= @swim.distance %></dd>
  <dt><strong><%= model_class.human_attribute_name(:swim_date) %>:</strong></dt>
  <dd><%= @swim.swim_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lengths) %>:</strong></dt>
  <dd><%= @swim.lengths %></dd>
  <dt><strong><%= model_class.human_attribute_name(:duration_minutes) %>:</strong></dt>
  <dd><%= @swim.duration_minutes %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              swims_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_swim_path(@swim), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              swim_path(@swim),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
