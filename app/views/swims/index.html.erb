<%- model_class = Swim -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:distance) %></th>
      <th><%= model_class.human_attribute_name(:swim_date) %></th>
      <th><%= model_class.human_attribute_name(:lengths) %></th>
      <th><%= model_class.human_attribute_name(:duration_minutes) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @swims.each do |swim| %>
      <tr>
        <td><%= link_to swim.id, swim_path(swim) %></td>
        <td><%= swim.user_id %></td>
        <td><%= swim.distance %></td>
        <td><%= swim.swim_date %></td>
        <td><%= swim.lengths %></td>
        <td><%= swim.duration_minutes %></td>
        <td><%=l swim.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_swim_path(swim), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      swim_path(swim),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_swim_path,
            :class => 'btn btn-primary' %>
