<%= form_for @swim, :html => { :class => "form-horizontal swim" } do |f| %>

  <% if @swim.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@swim.errors.count, "error") %> prohibited this swim from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @swim.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :user_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:user_id) %>
  </div>
  <div class="form-group">
    <%= f.label :distance, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :distance, :class => 'form-control' %>
    </div>
    <%=f.error_span(:distance) %>
  </div>
  <div class="form-group">
    <%= f.label :swim_date, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :swim_date, :class => 'form-control' %>
    </div>
    <%=f.error_span(:swim_date) %>
  </div>
  <div class="form-group">
    <%= f.label :lengths, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :lengths, :class => 'form-control' %>
    </div>
    <%=f.error_span(:lengths) %>
  </div>
  <div class="form-group">
    <%= f.label :duration_minutes, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :duration_minutes, :class => 'form-control' %>
    </div>
    <%=f.error_span(:duration_minutes) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                swims_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
